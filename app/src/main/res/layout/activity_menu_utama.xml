<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuUtama">

    <View
        android:id="@+id/background_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/gb_submenu"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button_belajar"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="280dp"
        android:layout_height="160dp"
        android:layout_marginTop="176dp"
        android:background="@drawable/btn_belajar"
        android:textColor="#00FFFFFF"
        android:textColorHighlight="#00FFFFFF"
        android:textColorHint="#00FFFFFF"
        android:textColorLink="#00FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_kuis"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="280dp"
        android:layout_height="160dp"
        android:layout_marginTop="136dp"
        android:background="@drawable/btn_kuis"
        android:rotation="12"
        android:textColor="#00FFFFFF"
        android:textColorHighlight="#00FFFFFF"
        android:textColorHint="#00FFFFFF"
        android:textColorLink="#00FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button_belajar" />
</androidx.constraintlayout.widget.ConstraintLayout>